<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter value of N:"
        android:textSize="30dp"
        android:layout_margin="5dp"/>
    <EditText
        android:minWidth="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/ft_N"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="enter"
        android:id="@+id/ft_enter_button"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/input_display_ft"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Sequence 1\nReal parts:"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:visibility="visible"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:minHeight="40dp"
                android:padding="2dp"
                android:visibility="visible"
                android:minWidth="30dp"
                android:id="@+id/real_1_ft"/>
        </HorizontalScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Imagenary parts"
            android:layout_margin="3dp"
            android:visibility="visible"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:layout_margin="2dp"
                android:minHeight="40dp"
                android:padding="2dp"
                android:visibility="visible"
                android:id="@+id/img_1_ft"/>
        </HorizontalScrollView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ok"
            android:id="@+id/ok_ft"
            android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/result_display_ft">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="2dp"
            android:text="The result"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:id="@+id/ft_result"
            android:visibility="visible"
            android:gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>